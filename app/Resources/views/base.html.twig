<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('style.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
        {% block body %}
        <body>
{#            On crée un block Nav qui est rappelé dans nos autres pages#}
            {% block nav %}
                <nav>
                    <ul>
{#                        On link grâce au path(name) la route#}
                        <li><a href="{{path('y')}}">yellow</a></li>
                        <li><a href="{{path('r')}}">red</a></li>
                        <li><a href="{{path('b')}}">blue</a></li>
                        <li><a href="{{path('g')}}">green</a></li>
                    </ul>
                </nav>
        {% endblock %}
        </body>
        {% endblock %}
        {% block javascripts %}{% endblock %}
</html>
